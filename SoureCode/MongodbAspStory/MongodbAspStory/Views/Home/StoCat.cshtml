@model MongodbAspStory.Models.DataModels.Category

@{
    ViewData["Title"] = "StoCat";
}

<div class="container">
    <div class="row align-items-start">
        <div class="col-12 col-md-8 col-lg-9 mb-3">
            <div class="head-title-global d-flex justify-content-between mb-2">
                <div class="col-12 col-md-12 col-lg-12 head-title-global__left d-flex">
                    <h2 class="me-2 mb-0 border-bottom border-secondary pb-1">
                        <span href="#" class="d-block text-decoration-none text-dark fs-4 category-name">@Html.DisplayFor(model => model.catName)</span>
                    </h2>
                </div>
            </div>
            <div class="list-story-in-category section-stories-hot__list">
                @foreach (var story in ViewBag.stoCats)
                {
                    <div class="story-item">
                        <a asp-action="Story" asp-route-id="@story._id" class="d-block text-decoration-none">
                            <div class="story-item__image">
                                <img src="~/Images/@story.image" class="img-fluid" style="max-width: 150px; width: 100%; height: 230px;">
                            </div>
                            <h3 class="story-item__name text-one-row story-name">@story.title</h3>
                            <div class="list-badge">
                                <span class="story-item__badge story-item__badge-new badge text-bg-info text-light">New</span>
                                <span class="story-item__badge badge text-bg-success">@story.stoStatus</span>
                                <span class="story-item__badge story-item__badge-hot badge text-bg-danger">Hot</span>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
        <div class="col-12 col-md-4 col-lg-3 sticky-md-top">
            <div class="category-description bg-light p-2 rounded mb-3 card-custom">
                <p class="mb-0 text-secondary"></p>
                <p>
                    @Html.Raw(Model.catInformation)
                </p>
                <p></p>
            </div>
        </div>
    </div>
</div>
