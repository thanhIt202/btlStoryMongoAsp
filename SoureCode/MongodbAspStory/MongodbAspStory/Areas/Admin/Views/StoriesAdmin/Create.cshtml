@model MongodbAspStory.Models.DataModels.Story

@{
    ViewData["Title"] = "Create";
}

<div class="row mb-2">
    <div class="col-sm-6">
        <h1 class="m-0">Thêm mới Truyện Chữ</h1>
    </div>
    <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index">Home Admin</a></li>
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="StoriesAdmin" asp-action="Index">Danh sách Truyện Chữ</a></li>
            <li class="breadcrumb-item active">Thêm mới Truyện Chữ</li>
        </ol>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Story Title: </label>
                <input asp-for="title" class="form-control" />
                <span asp-validation-for="title" class="text-danger"></span>
                <span class="text-danger">@ViewBag.errorName</span>
            </div>
            <div class="form-group">
                <label class="control-label">Story Author: </label>
                <input asp-for="author" class="form-control" />
                <span asp-validation-for="author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Story Interpreter: </label>
                <input asp-for="interpreter" class="form-control" />
                <span asp-validation-for="interpreter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Story Image: </label>
                <input asp-for="image" type="file" class="form-control" />
                <span class="text-danger">@ViewBag.errorImage</span> <!-- Display error for image -->
            </div>
            <div class="form-group">
                <label class="control-label">Story Information: </label>
                <textarea asp-for="stoInformation" id="txtDai" class="form-control"></textarea>
                <span asp-validation-for="stoInformation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Story Status: </label>
                <select asp-for="stoStatus" class="form-control">
                    <option value="Đang cập nhật">Đang cập nhật</option>
                    <option value="Hoàn thành">Hoàn thành</option>
                    <option value="Tạm ngưng">Tạm ngưng</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Story Chapter Number: </label>
                <input asp-for="numberChap" class="form-control" />
                <span asp-validation-for="numberChap" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Category Name: </label>
                <select asp-for="catId" asp-items="ViewBag.catId" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/styleadmin/ckeditor5-40.2.0-p5cboa81rymg/build/ckeditor.js"></script>
    <a href="~/styleadmin/ckeditor5-40.2.0-p5cboa81rymg/build/ckeditor.js.map">~/styleadmin/ckeditor5-40.2.0-p5cboa81rymg/build/ckeditor.js.map</a>
    <script>

        ClassicEditor
            .create(document.querySelector('#txtDai'), {

            })
            .then(editor => {
                window.editor = editor;
            })
            .catch(err => {
                console.error(err.stack);
            });

    </script>
}
