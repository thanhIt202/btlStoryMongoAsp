@model MongodbAspStory.Models.ViewModels.StoryViewModel

@{
    ViewData["Title"] = "Details";
}

<div>
    <div class="row mb-2">
        <div class="col-sm-6">
            <h1 class="m-0">Chi tiết Truyện Chữ</h1>
        </div>
        <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index">Home Admin</a></li>
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="StoriesAdmin" asp-action="Index">Danh sách Truyện Chữ</a></li>
                <li class="breadcrumb-item active">Chi tiết Truyện Chữ</li>
            </ol>
        </div>
    </div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Story ID: </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model._id)
        </dd>
        <dt class="col-sm-2">Story Title: </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.title)
        </dd>
        <dt class="col-sm-2">Story Author: </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.author)
        </dd>
        <dt class="col-sm-2">Story Interpreter: </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.interpreter)
        </dd>
        <dt class="col-sm-2">Story Image: </dt>
        <dd class = "col-sm-10">
            <img src="~/Images/@Model.image" width="80px" height="85px" />
        </dd>
        <dt class="col-sm-2">Story Information: </dt>
        <dd class="col-sm-10 truncate">
                @Html.Raw(Model.stoInformation)
        </dd>
        <dt class="col-sm-2">Story Status: </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.stoStatus)
        </dd>
        <dt class="col-sm-2">Story Chapter Number: </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.numberChap)
        </dd>
        <dt class="col-sm-2">Category Name: </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.catName)
        </dd>
    </dl>
</div>
<div class="btn btn-primary">
    @Html.ActionLink("Edit", "Edit", new { id = Model._id })
</div>
