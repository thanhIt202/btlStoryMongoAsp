@model MongodbAspStory.Models.DataModels.Account

@{
    ViewData["Title"] = "Details";
}

<div>
    <div class="row mb-2">
        <div class="col-sm-6">
            <h1 class="m-0">Chi tiết tài khoản</h1>
        </div>
        <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index">Home Admin</a></li>
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="AccountsAdmin" asp-action="Index">Danh sách tài khoản</a></li>
                <li class="breadcrumb-item active">Chi tiết tài khoản</li>
            </ol>
        </div>
    </div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Account ID: </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model._id)
        </dd>
        <dt class="col-sm-2">Account Full Name: </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.fullName)
        </dd>
        <dt class="col-sm-2">Account Email: </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.email)
        </dd>
        <dt class="col-sm-2">Account Phone: </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.accPhone)
        </dd>
        <dt class="col-sm-2">Account Address: </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.accAddress)
        </dd>
        <dt class="col-sm-2">Account Avatar: </dt>
        <dd class = "col-sm-10">
            <img src="~/Images/@Model.avatar" width="80px" height="85px" />
        </dd>
        <dt class="col-sm-2">Account Status: </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.accStatus)
        </dd>
        <dt class="col-sm-2">Account Type: </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.accType)
        </dd>
    </dl>
</div>
<div class="btn btn-primary">
    @Html.ActionLink("Edit", "Edit", new { id = Model._id })
</div>
