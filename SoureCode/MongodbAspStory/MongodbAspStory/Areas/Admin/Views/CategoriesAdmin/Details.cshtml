@model MongodbAspStory.Models.DataModels.Category

@{
    ViewData["Title"] = "Details";
}

<div>
    <div class="row mb-2">
        <div class="col-sm-6">
            <h1 class="m-0">Chi tiết loại truyện</h1>
        </div>
        <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index">Home Admin</a></li>
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="CategoriesAdmin" asp-action="Index">Danh sách loại truyện</a></li>
                <li class="breadcrumb-item active">Chi tiết loại truyện</li>
            </ol>
        </div>
    </div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2"> Category ID: </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model._id)
        </dd>
        <dt class = "col-sm-2"> Category Name: </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.catName)
        </dd>
        <dt class="col-sm-2"> Category Information: </dt>
        <dd class="col-sm-10 text-white">
            @Html.Raw(Model.catInformation)
        </dd>
        <dt class = "col-sm-2"> Category Status: </dt>
        <dd class = "col-sm-10">
            @if (@Model.catStatus == 0)
                {
                    <span>Tạm ẩn</span>
                }
                else
                {
                    <span>Hiển thị</span>
                }
        </dd>
    </dl>
</div>
<div class="btn btn-primary">
    @Html.ActionLink("Edit", "Edit", new { id = Model._id })
</div>
