@model MongodbAspStory.Models.DataModels.Category

@{
    ViewData["Title"] = "Create";
}

<div class="row mb-2">
    <div class="col-sm-6">
        <h1 class="m-0">Thêm mới loại truyện</h1>
    </div>
    <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index">Home Admin</a></li>
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="CategoriesAdmin" asp-action="Index">Danh sách loại truyện</a></li>
            <li class="breadcrumb-item active">Thêm mới loại truyện</li>
        </ol>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Category Name: </label>
                <input asp-for="catName" class="form-control" />
                <span asp-validation-for="catName" class="text-danger"></span>
                <span class="text-danger">@ViewBag.errorName</span>
                <div class="form-group">
                    <label class="control-label">Category Information: </label>
                    <textarea asp-for="catInformation" id="txtDai" class="form-control"></textarea>
                    <span asp-validation-for="catInformation" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Category Status</label>
                <div class="radio">
                    <label>
                        <input type="radio" asp-for="catStatus" value="1" checked>
                        Hiển thị
                    </label>
                </div>
                <div class="radio">
                    <label>
                        <input type="radio" asp-for="catStatus" value="0">
                        Tạm ẩn
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/styleadmin/ckeditor5-40.2.0-p5cboa81rymg/build/ckeditor.js"></script>
    <a href="~/styleadmin/ckeditor5-40.2.0-p5cboa81rymg/build/ckeditor.js.map">~/styleadmin/ckeditor5-40.2.0-p5cboa81rymg/build/ckeditor.js.map</a>
    <script>

        ClassicEditor
            .create(document.querySelector('#txtDai'), {

            })
            .then(editor => {
                window.editor = editor;
            })
            .catch(err => {
                console.error(err.stack);
            });

    </script>
}
